# Slack
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_APP_TOKEN=xapp-your-app-token-here
SLACK_ALLOWED_CHANNELS=C123456789,C987654321

# FAQ Source (choose one: "markdown" or "notion")
FAQ_SOURCE=markdown

# Markdown FAQ (only needed if FAQ_SOURCE=markdown)
FAQ_FILE_PATH=./devex_faqs.md

# Notion OAuth (only needed if FAQ_SOURCE=notion)
# Setup: Run `python scripts/notion_oauth_setup.py` to obtain tokens
NOTION_OAUTH_CLIENT_ID=your-client-id-here
NOTION_OAUTH_CLIENT_SECRET=your-client-secret-here
NOTION_OAUTH_REFRESH_TOKEN=your-refresh-token-here
NOTION_FAQ_PAGE_ID=your-page-id-here

# Claude
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# Retrieval (optional, with defaults)
TOP_K=5
MIN_SIMILARITY=0.70
MIN_GAP=0.15
MIN_RATIO=1.05
FAQ_SYNC_INTERVAL=30

# Mode-specific ratio thresholds for confidence scoring
# These are used when ratio-based confidence is enabled (default)
SEMANTIC_MIN_RATIO=1.10    # Higher for pure semantic (wider score spread)
HYBRID_MIN_RATIO=1.02      # Lower for RRF hybrid (tight score clustering)
RERANKING_MIN_RATIO=1.05   # Medium for cross-encoder

# Hybrid Search (BM25 + Semantic with Reciprocal Rank Fusion)
HYBRID_SEARCH_ENABLED=false
HYBRID_SEMANTIC_TOP_K=20
HYBRID_BM25_TOP_K=20

# Cross-Encoder Reranking (optional, downloads ~80MB model on first run)
# Enable for best accuracy on small FAQ corpora
RERANKING_ENABLED=false
RERANKING_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
RERANKING_RETRIEVAL_TOP_K=20
RERANKING_TOP_K=5

# Proactive FAQ Suggestion Features (optional, with defaults)
REACTION_SEARCH_ENABLED=true
SLASH_COMMAND_ENABLED=true
SUGGESTION_MIN_SIMILARITY=0.50
SUGGESTION_TOP_K=5

# Status Update Monitoring (optional, with defaults)
STATUS_MONITORING_ENABLED=true
SLACK_STATUS_CHANNELS=C123456789  # Comma-separated list of status/announcement channels
STATUS_CACHE_TTL_HOURS=24

# Interaction Logging (optional, with defaults)
INTERACTION_LOG_ENABLED=true
INTERACTION_LOG_PATH=./data/interactions.db

# Read Receipts / Mention Tracking (optional, with defaults)
MENTION_TRACKING_ENABLED=true
RECEIPT_TTL_HOURS=168  # 7 days

# Admin Users (comma-separated Slack user IDs for admin-only commands)
SLACK_ADMIN_USER_IDS=U123456789,U987654321
