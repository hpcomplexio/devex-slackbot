# Slack
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_APP_TOKEN=xapp-your-app-token-here
SLACK_ALLOWED_CHANNELS=C123456789,C987654321

# FAQ Source (choose one: "markdown" or "notion")
FAQ_SOURCE=markdown

# Markdown FAQ (only needed if FAQ_SOURCE=markdown)
FAQ_FILE_PATH=./devex_faqs.md

# Notion OAuth (only needed if FAQ_SOURCE=notion)
# Setup: Run `python scripts/notion_oauth_setup.py` to obtain tokens
NOTION_OAUTH_CLIENT_ID=your-client-id-here
NOTION_OAUTH_CLIENT_SECRET=your-client-secret-here
NOTION_OAUTH_REFRESH_TOKEN=your-refresh-token-here
NOTION_FAQ_PAGE_ID=your-page-id-here

# Claude
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# Retrieval (optional, with defaults)
TOP_K=5
MIN_SIMILARITY=0.70
MIN_GAP=0.15
FAQ_SYNC_INTERVAL=30

# Proactive FAQ Suggestion Features (optional, with defaults)
REACTION_SEARCH_ENABLED=true
SLASH_COMMAND_ENABLED=true
SUGGESTION_MIN_SIMILARITY=0.50
SUGGESTION_TOP_K=5

# Status Update Monitoring (optional, with defaults)
STATUS_MONITORING_ENABLED=true
SLACK_STATUS_CHANNELS=C123456789  # Comma-separated list of status/announcement channels
STATUS_CACHE_TTL_HOURS=24
